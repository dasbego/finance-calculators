---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
  <a
    href={href}
    class="flex flex-col items-center justify-center p-6 rounded-lg bg-gray-800 hover:bg-gradient-to-r hover:from-blue-500 hover:to-purple-500 transition duration-500"
  >
    <h2 class="text-xl font-semibold text-white transition duration-500">
      {title}
    </h2>
    <p class="mt-2 text-gray-300">{body}</p>
  </a>
</li>
